<div class="allProductsPage page-wrapper" >
    <div class="container" style="background:#F5F5F5; padding: 25px 25px; border-radius: 15px;">
        <div class="row">
            <div class="col-sm-12">
                <h3 class='title ml-1'>{{users.firstName}}'s Pending Requests</h3>
            </div>
        </div>
        <div class="row">
            {{#each renterStuff}}
            <div class="col-sm-4">
                <div class="card-group">
                    <div class="card mb-5 text-center" style="width: 18rem;">
                        <img class="card-img-top" id='transctionPhoto' src='https://s3-us-west-1.amazonaws.com/moochify/{{Photo1}}'>
                        <div class="card-body bg-light">
                            <h5 class="card-title">{{productName}} {{category}}</h5>
                            <p class="card-text">{{product_description}}</p>
                            <p class="card-text">Price : ${{daily}}/day ${{weekly}}/week ${{monthly}}/monthly</p>
                            <p class="card-text">Security Deposit : ${{security_deposit}}</p>
                            <h6>Requestee:</h6>
                            <button class='btn btn-outline-info align-content-center' productId={{id}} type="button" href=>
                                <a href='/users/profile/{{rentersEmail}}'>{{rentersEmail}}</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>